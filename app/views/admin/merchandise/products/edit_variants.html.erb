<%= render :partial => '/admin/merchandise/sub_header'%>

<h2> (<%= @product.name %>)</h2>

<%= form_for @product, :url  => update_variants_admin_merchandise_product_path(@product),
                        :html => {:class => ''}  do |form| %>
  <%#= render :partial => '/admin/merchandise/variants/form', :locals => {:form => form}%>
  <%= render :partial => '/admin/merchandise/products/variants_form', :locals => {:form => form}%>

  <div class="button generic_submit_button">
    <%= submit_tag "Update",
                    :class  => "button",
                    :id     => "update_product_button" %>
  </div>

<% end %>

<% content_for :bottom do -%>
  <%= javascript_include_tag 'admin/edit_variants' %>
<% end %>
