<h1> Monthly Sales </h1>

<div id="monthly-summary-graph" style="height: 250px;"></div>

<script>
  new Morris.Line({
    // ID of the element in which to draw the chart.
    element: 'monthly-summary-graph',
    // Chart data records -- each entry in this array corresponds to a point on
    // the chart.
    data: [
      { year: '2013-03', amount: 20, sales: 4 },
      { year: '2013-04', amount: 10, sales: 2 },
      { year: '2013-05', amount: 5,  sales: 1 },
      { year: '2013-06', amount: 5,  sales: 2 },
      { year: '2013-07', amount: 20, sales: 5 }
    ],
    // The name of the data record attribute that contains x-values.
    xkey: 'year',
    // A list of names of data record attributes that contain y-values.
    ykeys: ['amount', 'sales'],
    // Labels for the ykeys -- will be displayed when you hover over the
    // chart.
    labels: ['Earnings', 'Sales']
  });
</script>
